<%- model_class = LynIn -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:avatar) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lyn_ins.each do |lyn_in| %>
      <tr>
        <td><%= link_to lyn_in.id, lyn_in_path(lyn_in) %></td>
        <td><%= lyn_in.name %></td>
        <td><%= lyn_in.score %></td>
        <td><%= lyn_in.description %></td>
        <td><%= lyn_in.avatar_identifier %></td>
        <td>
          <%= link_to "play", {:controller => "lyn_ins",:id=>lyn_in.id, :action => "new_play"}%>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lyn_in_path(lyn_in), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lyn_in_path(lyn_in),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lyn_in_path,
            :class => 'btn btn-primary' %>
